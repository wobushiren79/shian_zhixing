<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_qt0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:padding="@dimen/dimen_20dp" >

        <TextView
            android:id="@+id/tv_qt0"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="客户姓名:"
            android:textSize="@dimen/text_size_top_bg" />

        <TextView
            android:id="@+id/tv_qt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_toRightOf="@+id/tv_qt0"
            android:gravity="left"
            android:text="AAAAAAAAAAAAAA"
            android:textSize="@dimen/text_size_top_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qt_phone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_common" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qt1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:padding="@dimen/dimen_20dp" >

        <TextView
            android:id="@+id/tv_qt1"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="洽谈时间:"
            android:textSize="@dimen/text_size_top_bg" />

        <TextView
            android:id="@+id/tv_qt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_toRightOf="@+id/tv_qt1"
            android:gravity="left"
            android:text="AAAAAAAAAAAAAA"
            android:textSize="@dimen/text_size_top_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qt_phone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_common" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qt2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:padding="@dimen/dimen_20dp" >

        <TextView
            android:id="@+id/tv_qt2"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="洽谈地点:"
            android:textSize="@dimen/text_size_top_bg" />

        <TextView
            android:id="@+id/tv_qt21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_toRightOf="@+id/tv_qt2"
            android:gravity="left"
            android:text="AAAAAAAAAAAAAA"
            android:textSize="@dimen/text_size_top_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qt_phone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_common" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qt3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:padding="@dimen/dimen_20dp" >

        <TextView
            android:id="@+id/tv_qt3"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="治丧指导:"
            android:textSize="@dimen/text_size_top_bg" />

        <TextView
            android:id="@+id/tv_qt31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_toRightOf="@+id/tv_qt3"
            android:gravity="left"
            android:text="AAAAAAAAAAAAAA"
            android:textSize="@dimen/text_size_top_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qt_phone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_common" />
    </RelativeLayout>

    <TextView android:id="@+id/tv_qt_item_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:background="@drawable/ic_home_reg"
        android:gravity="center"
        android:text="编辑订单"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView android:id="@+id/tv_qt_item_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="客户详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp" />

        <TextView android:id="@+id/tv_qt_item_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal" >

        <TextView android:id="@+id/tv_qt_item_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="支付定金"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp" />

        <TextView android:id="@+id/tv_qt_item_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_home_reg"
            android:gravity="center"
            android:text="结束洽谈"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_40dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@color/gray" />

</LinearLayout>