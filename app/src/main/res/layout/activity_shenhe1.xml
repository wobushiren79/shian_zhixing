<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="文字"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_28dp" />

        <EditText
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:id="@+id/et_shenhe_w"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/shape_et_order_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:text=""
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="图片"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/dimen_28dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_0"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file1" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_0"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_1"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file2" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_2"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file3" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_3"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file4" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_editorder"
        android:layout_width="@dimen/dimen_688dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/dimen_16dp"
        android:background="@drawable/zhy_button_state_5"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_32dp" />

</LinearLayout>