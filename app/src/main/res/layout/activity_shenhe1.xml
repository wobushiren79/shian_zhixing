<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blackground"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_home_reg"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="文字"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_top_bg" />

        <EditText
            android:id="@+id/et_shenhe_w"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_et_order_bg"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_top_bg" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_home_reg"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="图片"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_0"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file1" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_0"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_1"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file2" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_2"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file3" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_ht_pic_3"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:background="@drawable/ic_ht_pic"
                    android:gravity="center"
                    android:tag="file4" />

                <ProgressBar
                    android:id="@+id/pb_ht_pic_3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen_300dp"
                    android:layout_height="@dimen/dimen_200dp"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_editorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/dimen_40dp"
        android:background="@drawable/ic_home_reg"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_40dp" />

</LinearLayout>