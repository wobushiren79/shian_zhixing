<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_blackground"></FrameLayout>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_96dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_main_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/ic_bar_home_selector_2"
                android:gravity="center_horizontal"
                android:text="@string/main_1"
                android:textColor="@color/main_rb_text_color"
                android:textSize="@dimen/txtsize_24sp" />

            <RadioButton
                android:id="@+id/rb_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_60dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_bar_order_selector_2"
                android:gravity="center_horizontal"
                android:text="@string/main_2"
                android:textColor="@color/main_rb_text_color"
                android:textSize="@dimen/txtsize_24sp" />

            <RadioButton
                android:id="@+id/rb_main_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_bar_find_selector_2"
                android:gravity="center_horizontal"
                android:text="@string/main_3"
                android:textColor="@color/main_rb_text_color"
                android:textSize="@dimen/txtsize_24sp" />

            <RadioButton
                android:id="@+id/rb_main_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_bar_my_selector_2"
                android:gravity="center_horizontal"
                android:text="@string/main_4"
                android:textColor="@color/main_rb_text_color"
                android:textSize="@dimen/txtsize_24sp" />
        </RadioGroup>
    </LinearLayout>

