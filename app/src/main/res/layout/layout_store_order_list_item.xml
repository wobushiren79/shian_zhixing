<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:background="@drawable/zhy_item_state_white"
        android:elevation="@dimen/dimen_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_26dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/zhy_text_color_1"
                android:textSize="@dimen/dimen_28dp" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/zhy_text_color_16"
                android:textSize="@dimen/dimen_24dp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_4" />

        <LinearLayout
            android:background="@drawable/zhy_button_state_ll_white"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_14dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_details"
                    style="@style/store_order_list_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_customer_name"
                    style="@style/store_order_list_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_service_time"
                    style="@style/store_order_list_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_service_location"
                    style="@style/store_order_list_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_order_more"
                android:layout_width="@dimen/dimen_22dp"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_order_more" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/zhy_button_state_ll_white"
                android:id="@+id/ll_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_44dp"
                    android:layout_height="@dimen/dimen_44dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_order_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系客户"
                    android:textColor="@color/zhy_text_color_1"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/zhy_button_state_ll_white"
                android:id="@+id/ll_customer_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_44dp"
                    android:layout_height="@dimen/dimen_44dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_order_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="定位"
                    android:textColor="@color/zhy_text_color_1"
                    android:textSize="@dimen/dimen_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_complete_more"
                    style="@style/order_button_level_2"
                    android:layout_width="@dimen/dimen_132dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center_vertical"
                    android:text="再次提交"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_details"
                    style="@style/order_button_level_2"
                    android:layout_width="@dimen/dimen_132dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center_vertical"
                    android:text="执行详情"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_complete"
                    style="@style/order_button_level_1"
                    android:layout_width="@dimen/dimen_132dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center_vertical"
                    android:text="提交结果"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_start"
                    style="@style/order_button_level_1"
                    android:layout_width="@dimen/dimen_132dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center_vertical"
                    android:text="开始服务"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_reject"
                    style="@style/order_button_level_2"
                    android:layout_width="@dimen/dimen_132dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center_vertical"
                    android:text="拒单"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_accept"
                    style="@style/order_button_level_1"
                    android:layout_width="@dimen/dimen_132dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center_vertical"
                    android:text="接单"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>