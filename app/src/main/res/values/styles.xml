<resources>

    
     <style name="orderlist_item_title_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/txtsize_30sp</item>
        <item name="android:minEms">6</item>
    </style>

    <style name="orderlist_item_content_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txtsize_25sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="orderlist_item_btn_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/txtsize_30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_orderlist_item_btn</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="tipsDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="edit_order_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/txtsize_32sp</item>
    </style>

    <style name="edit_order_editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/shape_et_order_bg</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/txtsize_32sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="edit_order_spinnerStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="order_detail_projectTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/txtsize_35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/dimen_20dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
    </style>

    <style name="order_detail_ctgTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/txtsize_30sp</item>
        <item name="android:paddingTop">@dimen/dimen_30dp</item>
        <item name="android:paddingBottom">@dimen/dimen_15dp</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:paddingRight">@dimen/dimen_15dp</item>
    </style>

    <style name="order_detail_productTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txtsize_27sp</item>
        <item name="android:padding">@dimen/dimen_20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

   
    <style name="customer_detail_title2TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txtsize_30sp</item>
        <item name="android:minEms">6</item>
        <item name="android:paddingTop">@dimen/dimen_25dp</item>
        <item name="android:paddingBottom">@dimen/dimen_25dp</item>
        <item name="android:paddingLeft">@dimen/dimen_25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="customer_detail_contentTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/txtsize_30sp</item>
        <item name="android:paddingTop">@dimen/dimen_25dp</item>
        <item name="android:paddingBottom">@dimen/dimen_25dp</item>
        <item name="android:paddingRight">@dimen/dimen_25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StyledIndicators" parent="@style/AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/viewpager_title_textcolor</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>
    -

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>
</resources>